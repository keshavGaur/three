<% include common/top.ejs %>
<% var status = data.data.status;
   var medi = data.data;
   console.log(medi);
%>
 <div class="row">
    <div class="col-sm-3 col-md-2 sidebar">
        <% include common/left-sidebar.ejs %>
    </div>
    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main ">
        <h1 class="page-header">Ingredients</h1>
        <div class="row">
            <div class="col-md-12">
                <div class="alert alert-success" style="display:none">
                    <strong>Success!</strong> Ingredient added successfully..
                </div>
                <form role="form" class="form-inline addPrescriptionFrm pull-left" method="post">
                    <div class="form-group" >
                    </div>

                            <div class="form-group">
                                <label for="name">userName</label>
                                <input type="text" class="form-control" name="Name" required>
                                <label for="Prescription name">Prescription name</label>
                                <input type="text" class="form-control" name="Prescription name" required>
                            </div>

             <input type="submit" name = "addBtn" value="Add"  class="btn-outline pull-right">
                </form>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>#</th>
                    <th>user name</th>
                    <th>prescription</th>

                </tr>
                </thead>
                <tbody>
                <% if(medi.length >0){
                        for(var i = 0 ;i<medi.length ; i++){ %>
                            <tr>
                                <td width="10%"><%=medi[i].userId%></td>
                                <td width="10%"><%=medi[i].userName%></td>
                                <td width="25%" id="prescriptionNames"><%=medi[i].prescriptionName%></td>
                                <!--<td width="10%"><div class="pull-right"><a href="#" class="editIngred">Edit</a></div></td>-->
                                <!--<td width="10%"><div class="pull-right"><a href="#" onclick="deleteIngredient(<%=medi[i]%>)">Delete</a></div></td>-->
                            </tr>
                        <%} %>

                <%} else{%>
                    <tr>
                        <td colspan="8">No data found</td>
                    </tr>
                <%}%>

                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3 col-md-2 "></div>
        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main ">
            <% include common/bottom.ejs %>
        </div>

    </div>
</div>

